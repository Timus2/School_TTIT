<Page x:Class="VISwpf.Pages.PagePositions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VISwpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagePositions">

    <Grid>
        <DataGrid x:Name="DataGridPositions" IsReadOnly="True" AutoGenerateColumns="False" CanUserReorderColumns="True"  HorizontalAlignment="Stretch" Height="Auto" Margin="10,10,10,10" VerticalAlignment="Stretch" Width="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Name_position}" Header ="Должность" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
